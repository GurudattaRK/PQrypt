<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> 
    <uses-permission android:name="android.permission.BIND_AUTOFILL_SERVICE" /> 
    <uses-permission android:name="android.permission.USE_BIOMETRIC" /> 
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    
    <!-- Bluetooth permissions for Android 12+ (API 31+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    
    <!-- Bluetooth permissions for older versions -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />
    
    <!-- Location permissions required for Bluetooth device discovery -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    
    <!-- Bluetooth features -->
    <uses-feature android:name="android.hardware.bluetooth" android:required="true" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" /> 

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PQrypt">
        
        <!-- PQrypt Autofill Service -->
        <service
            android:name=".PQryptAutofillService"
            android:exported="false"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" /> 
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_service" /> 
        </service>
        
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" /> 
                <category android:name="android.intent.category.LAUNCHER" /> 
            </intent-filter>
        </activity>
        
        <activity
            android:name=".FileEncryptionActivity"
            android:exported="false" />
            
        <activity
            android:name=".PQCKeyExchangeActivity"
            android:exported="false" />
            
        <activity
            android:name=".KeyExchangeProcessActivity"
            android:exported="false" />
            
        <activity
            android:name=".PasswordVaultActivity"
            android:exported="false" />
            
        <activity
            android:name=".PasswordSettingsActivity"
            android:exported="false" />
            
        <activity
            android:name=".KeyExchangeModeActivity"
            android:exported="false" />
            
        <activity
            android:name=".BluetoothKeyExchangeActivity"
            android:exported="false" />

        <activity
            android:name=".HelpActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareModeActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareManualFileActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareBluetoothFileActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareManualTextActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareBluetoothTextActivity"
            android:exported="false" />

        <activity
            android:name=".SecureShareHelpActivity"
            android:exported="false" />
            
    </application> 

</manifest> 