<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Top Bar: Back (left) + Help? (right) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="#BA68C8"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help?"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="#FF9800"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Generator"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Input Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <!-- App Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App / Website Name"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/et_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g., Gmail, Facebook, etc."
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- App Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App / Website Password (optional)"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/et_app_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Optional existing password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Master Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Password"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="6dp" />

            <EditText
                android:id="@+id/et_master_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your master password"
                android:inputType="textPassword"
                android:padding="12dp" />
        </LinearLayout>

        <!-- Generate + Settings Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btn_generate_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Get Password"
                android:backgroundTint="#00AF00"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:backgroundTint="#00B0F0"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Generated Password Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_generated_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Generated password will appear here"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_unsafe_clipboard_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#D80000"
                android:text="⚠️ Copy"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Autofill Service Status Button -->
        <Button
            android:id="@+id/btn_autofill_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check Autofill Service Status"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
